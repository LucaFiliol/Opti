import cv2
import sys

img = cv2.imread("C:\\Users\\lucaf\\OneDrive\\Images\\Screenshots\\moiChad.png")

if img is None:
    sys.exit("Impossible de lire l'image")


negatif = 255 - img



cv2.imshow("Image de base", img)
cv2.imshow("Image Negatif", negatif)

cv2.imwrite("images/photo_negatif.png", negatif)

cv2.waitKey(0)
cv2.destroyAllWindows()

